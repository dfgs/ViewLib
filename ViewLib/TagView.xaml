<UserControl x:Class="ViewLib.TagView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewLib"  x:Name="root"
             mc:Ignorable="d"  FontSize="8" FontFamily="Verdana"
             >
	
	<Border BorderBrush="#55000000" BorderThickness="1" DataContext="{Binding ElementName=root}">
		<DockPanel>
			<Border DockPanel.Dock="Right" Background="{Binding TagBrush}" Width="3"/>
			<ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"  Margin="2,0,2,0"  Content="{Binding TagContent}"/>
		</DockPanel>
	</Border>
</UserControl>
