<UserControl x:Class="ViewLib.BulletHeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewLib"
             mc:Ignorable="d" 
             >
    <StackPanel Orientation="Horizontal">
		<Image Source="Images/bullet_orange.png" Stretch="None"/>
		<TextBlock Text="{Binding FallbackValue=NA,TargetNullValue=NA}" FontWeight="Bold" VerticalAlignment="Center" />
		<TextBlock Text=":" FontWeight="Bold" VerticalAlignment="Center" />
	</StackPanel>
</UserControl>
